%h1 Your Results

%h3 Scored Quiz

%div.results_box
  -@personality.traits.each do |trait|
    .div.image_results.span2
      =image_tag trait.image
      %br
      %h4
        =trait.name
        ='(' + ')'
%h3 Understanding Results
%table.table.table-striped
  -@personality.traits.each do |trait|
    %tr
      %td{:colspan => '2'}
        %h4=trait.name
    %tr
      %td.descriptionImage
        =image_tag trait.image
      %td
        =trait.description