.hero.signin_hero

  -if current_user
    %h2
      = 'Welcome to your profile page , ' + current_user.name 
  .container
    .image-group.pull-left
      = image_tag 'Profile3.png' , class: 'primary'
      %br

    .image-group.profile_icon.pull-left
      -@score_hash.each do |trait_id, count|
        -trait = Trait.find(trait_id)
        .div.image_results
          =image_tag trait.image
          %br
          =trait.name
  %br
  %br
    %section.phase-white
      %table
        %tr

          %h2 Recent Tools Used


          = image_tag 'ToolsPlaceholder.png'
          = image_tag 'ToolsPlaceholder.png'
          = image_tag 'ToolsPlaceholder.png'
          = image_tag 'ToolsPlaceholder.png'
          %br
    .row
      - @resources.each do |resource|
        .resourcebox.span12
          %strong= resource.name
          %br
          %br
          = resource.description
          %br
          %br
          = link_to 'Show', resource

