%p#notice= notice
.jumbotron
  .row
    .col-sm-2
      =image_tag @color.image_name, style: "width:70%; margin: 0px 15% 20px 15%;"
    .col-sm-10
      %h2
        =@color.name
      %p
        %b
        - if @color.value_proposition_category.present?
          = link_to @color.value_proposition_category.name, value_proposition_category_path(@color.value_proposition_category.id)
        -else
          (Empty)
  %p
    = @color.description
%hr
%p
  %h3
    = 'Helpful resources for ' + @color.name.pluralize + ' engagements'
  %table.table.table-striped
    - @color.resources.each do |resource|
      %tr{:id => "vp_#{@color.id}_#{resource.id}"}
        %td
          = link_to resource.name, resource_path(resource)

.btn-group
  - if current_user.present? && current_user.is_admin?
    .btn.btn-default
      = link_to "Edit #{@color.name}", edit_color_path(@color)
  .btn.btn.btn-default
    = link_to 'All Value Proposition Categories', pages_value_proposition_categories_path
