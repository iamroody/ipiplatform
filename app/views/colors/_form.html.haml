= form_for @color do |f|
  - if @color.errors.any?
    #error_explanation
      %h2= "#{pluralize(@color.errors.count, "error")} prohibited this color from being saved:"
      %ul
        - @color.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :name, :class => 'span6'
  .field
    = f.text_area :description, :class => 'span8', :rows => 5
  .field
    = f.label 'Value Proposition Category '
    %br
    - if @value_proposition_categories.present?
      %select{name: 'value_proposition_category_id'}
        - @value_proposition_categories.each do |value_proposition_category|
          %option{ value: value_proposition_category.id, selected: value_proposition_category == @color.value_proposition_category}= h value_proposition_category.name
  .field
    = f.label 'Image upload'
    = f.file_field :image, accept: 'image/png,image/gif,image/jpeg'
  .actions
    = f.submit 'Save', id: 'save'
