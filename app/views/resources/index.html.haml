%h1 
  Resources

%table.table.table-striped
  %tr
    %th Name
    %th Link
    %th Description
    %th
    %th
    %th

  - @resources.each do |resource|
    %tr
      %td= resource.name
      %td= link_to resource.link, resource.link
      %td= resource.description
      %td= link_to 'Show', resource
      %td= link_to 'Edit', edit_resource_path(resource)
      %td= link_to 'Destroy', resource, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br      
.btn
  = link_to 'New Resource', new_resource_path
