= form_for @resource do |f|
  - if @resource.errors.any?
    #error_explanation
      %h2= "#{pluralize(@resource.errors.count, "error")} prohibited this resource from being saved:"
      %ul
        - @resource.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :link
    = f.text_field :link
  .field
    = f.label :description
    = f.text_area :description
  .field
    = hidden_field_tag "resource[trait_ids][]", nil
    -@traits.each do |trait|
      =check_box_tag "resource[trait_ids][]", trait.id, @resource.trait_ids.include?(trait.id)
      =trait.name 
      %br
  .actions
    = f.submit 'Save'
