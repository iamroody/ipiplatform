.navbar.navbar-fixed-top
  .navbar-inner
    .container
      .btn-group.pull-left
        .btn
          =link_to 'Innovator', pages_innovator_path
        .btn
          =link_to 'Tools', pages_tools_path
        .btn
          =link_to 'Phases', pages_phases_path
        .btn
          =link_to 'About', pages_aboutus_path

      .brand
        =link_to 'sidekick', root_path
      .right_box.pull-right
        .content.user_name
          -if current_user
            = link_to  'Welcome, ' + current_user.name, pages_profile_path
