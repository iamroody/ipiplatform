.navbar.navbar-fixed-top
  .navbar-inner
    .container
      .btn-group.pull-left
        .btn
          =link_to 'Value Propositions', pages_value_propositions_path
        .btn
          =link_to 'Resources', pages_tools_path
        .btn
          =link_to 'About', pages_aboutus_path

      .brand
        =link_to 'ThoughtWorks Innovation Resources', root_path
      .right_box.pull-right
        .content.user_name
          -if current_user
            = link_to  'Welcome, ' + current_user.name, current_user
            = ' | '
            = link_to "Log Out", session_path("current"), method: "delete"

          -else
            =link_to 'Sign up', new_user_path
            =' | '
            =link_to 'Sign in', new_session_path
      .right_box.pull-right
        .btn-group
          .btn.suggestions_button
            =link_to 'Suggestions', suggestions_path, class: 'suggestion'