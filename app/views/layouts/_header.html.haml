          -else
            =link_to 'Sign up', new_user_path
            =' | '
            =link_to 'Sign in', new_session_path
      .right_box.pull-right
        .btn-group
          .btn.suggestions_button
            =link_to 'Suggestions', suggestions_path, class: 'suggestion'

