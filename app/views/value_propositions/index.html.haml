%h1 Value propositions

%table.table.table-striped
  %tr
    %th Name
    %th Description
    %th Value Proposition
    %th{colspan: 3} Actions

  - @value_proposition.each do |value_proposition|
    %tr
      %td= value_proposition.name
      %td= value_proposition.description
      %td
        - if value_proposition.value_proposition_category.present?
          = value_proposition.value_proposition_category.name
      %td= link_to 'Show', value_proposition
      
      - if current_user.present? && current_user.is_admin?
        %td= link_to 'Edit', edit_value_proposition_path(value_proposition), id: "edit_value_proposition_#{value_proposition.id}"
        %td= link_to 'Destroy', value_proposition, :method => :delete, :data => { :confirm => 'Are you sure?' }, id: "delete_value_proposition_#{value_proposition.id}"
      - else
        %td{colspan: 2}
%br

.btn
  = link_to 'New Value proposition', new_value_proposition_path, id: 'create_new_value_proposition'