= form_for @trait do |f|
  - if @trait.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trait.errors.count, "error")} prohibited this trait from being saved:"
      %ul
        - @trait.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
