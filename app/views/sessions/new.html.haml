.hero.signin_hero
	%h2 Login to sidekick

	.container
		=form_tag sessions_path do
			.field
				=label_tag :email
				=text_field_tag :email, params[:email], class: 'loginfield'
			.field
				=label_tag :password
				=password_field_tag :password, '', class: 'passwordfield'
			.actions
				=submit_tag 'Log in', class: 'submitbutton'
			%br
			%p
				Not a member yet?
				=link_to 'Sign up!', new_user_path