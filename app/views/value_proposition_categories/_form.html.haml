= form_for @value_proposition_category do |f|
  - if @value_proposition_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@value_proposition_category.errors.count, "error")} prohibited this value proposition category from being saved:"
      %ul
        - @value_proposition_category.errors.full_messages.each do |msg|
          %li= msg

  .row
    .form-group.col-sm-6
      %label.control-label
        = f.label :name
      = f.text_field :name, placeholde: 'Name of Category', class: 'form-control'

  .row
    .form-group.col-sm-6
      %label.control-label
        = f.label :description
      = f.text_area :description, class: 'form-control', rows: '5'
  .actions
    = f.submit 'Save', id: 'save_new_value_proposition_category', class: "btn btn-default"
