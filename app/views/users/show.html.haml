.hero.signin_hero
  %h2
    =@user.name
  %hr
  .container
    .image-group.pull-left
      = image_tag 'Profile3.png' , class: 'primary'
      %br
    .image-group.profile_icon.pull-left
      -if user_has_taken_quiz
        -current_user.personality.each do |trait_id, count|
          -trait = Trait.find(trait_id)
          .div.image_results
            =image_tag trait.image
            %br
            =trait.name
      -else
        Take the innovator type survey to fill out your profile.
        %br
        .btn
          = link_to 'Take the survey!', take_survey_path
  %br
%br
  %h3 
    Recent Tools Used
  %table
    %tr
      = image_tag 'ToolsPlaceholder.png'
      = image_tag 'ToolsPlaceholder.png'
      = image_tag 'ToolsPlaceholder.png'
      = image_tag 'ToolsPlaceholder.png'
      %br
%h3 Uploaded Resources
- @resources.each do |resource|
  .resourcebox.span12
    %strong= resource.name
    %br
    %br
    = resource.description
    %br
    %br
    = link_to 'Show', resource
